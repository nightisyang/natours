extends base
include _reviewCard

mixin  overviewBox(label, text, icon)
    .overview-box__detail
        svg.overview-box__icon
            use(xlink:href=`/natours/img/icons.svg#icon-${icon}`)
        span.overview-box__label= label
        span.overview-box__text= text 

block append head
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css" integrity="sha512-hoalWLoI8r4UszCkZ5kL8vayOGVae1oxXe/2A4AO6J9+580uKHDO3JdHb7NzwwzK5xr/Fs0W40kiNHxM9vyTtQ==" crossorigin="")

    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js" integrity="sha512-BB3hKbKWOc9Ez/TAwyWxNXeoV9c1v6FIeYiBieIWkpLjauysF18NzgR1MBNBXf8/KABdlkX68nAhlwcDFLGPCQ==" crossorigin="")


block content
    section.section-header 
        .header__hero
            .header__hero-overlay &nbsp;
            img.header__hero-img(src=`/natours/img/tours/${tour.imageCover}` alt=`${tour.name}`)

        .heading-box
            h1.heading-primary
                span= tour.name 
            .heading-box__group
                .heading-box__detail
                    svg.heading-box__icon
                        use(xlink:href='/natours/img/icons.svg#icon-clock')
                    span.heading-box__text= `${tour.duration} days`
                .heading-box__detail
                    svg.heading-box__icon
                        use(xlink:href='/natours/img/icons.svg#icon-map-pin')
                    span.heading-box__text= `${tour.startLocation.description}`

    section.section-description
        .overview-box
            div
                .overview-box__group
                    h2.heading-secondary.ma-bt-lg Quick facts
                    - const date  = tour.startDates[0].toLocaleString('en-us', {month: 'long', year:'numeric'})
                    - const difficulty = tour.difficulty 
                    - const groupSize = `${tour.maxGroupSize} people`
                    - const rating =  `${tour.ratingsAverage} / 5`

                    +overviewBox('Next date', date, 'calendar')
                    +overviewBox('Difficulty', difficulty, 'trending-up')
                    +overviewBox('Participants', groupSize, 'user')
                    +overviewBox('Rating', rating, 'star')


                .overview-box__group
                    h2.heading-secondary.ma-bt-lg Your tour guides
                        each guide in tour.guides 

                            .overview-box__detail
                                img.overview-box__img(src=`/natours/img/users/${guide.photo}` alt=`${guide.role}`)

                                - if(guide.role === 'lead-guide')
                                    span.overview-box__label Lead guide 
                                - if(guide.role === 'guide')
                                    span.overview-box__label Tour guide  
                                span.overview-box__text= guide.name 

        .description-box
            h2.heading-secondary.ma-bt-lg= `About ${tour.name} tour`
            - const paragraphs = tour.description.split('\n')
            each p in paragraphs 
                p.description__text= p 

    section.section-pictures
        each img, i in tour.images 
            .picture-box
                img.picture-box__img(src=`/natours/img/tours/${img}` alt=`${tour.name} ${i + 1}` class=`picture-box__img--${i+1}`)


    section.section-map
        #map(data-locations=`${JSON.stringify(tour.locations)}`)

    section.section-reviews
        .reviews
            each review in tour.reviews
                +reviewCard(review)

    section.section-cta
        .cta
            .cta__img.cta__img--logo
                img(src='/natours/img/logo-white.png' alt='Natours logo')
            img.cta__img.cta__img--1(src=`/natours/img/tours/${tour.images[1]}` alt=`${tour.name}`)
            img.cta__img.cta__img--2(src=`/natours/img/tours/${tour.images[2]}` alt=`${tour.name}`)
            .cta__content
                h2.heading-secondary What are you waiting for?
                p.cta__text= `${tour.duration} days. 1 adventure. Infinite memories. Make it yours today!`
                button.btn.btn--green.span-all-rows Book tour now!