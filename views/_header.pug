header.header 
    nav.nav.nav--tours 
        a.nav__el(href="/natours") All tours 
    .header__logo
        img(src="/natours/img/logo-white.png" alt="Natours logo")
    nav.nav.nav--user
        if user 
            a.nav__el.nav__el--logout Log out 
            a.nav__el(href="/natours/account")
                img.nav__user-img(src=`/natours/img/users/${user.photo}` alt=`Photo of ${user.name}`)
                span= user.name.split(' ')[0]
        else 
            a.nav__el(href="/natours/login") Log in 
            a.nav__el.nav__el--cta(href="/natours/signup") Sign up
